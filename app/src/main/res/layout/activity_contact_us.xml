<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layoutDirection="rtl"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    tools:context=".activity.ContactUsActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:id="@+id/topBar"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/icon_back"/>

        <ir.Peaky.checkit.utils.BoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact_us"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/title_color" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/topBar"
        android:layout_marginTop="40dp"
        android:id="@+id/img"
        android:background="@drawable/ic_contact_us"
        />

    <ir.Peaky.checkit.utils.RegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/title_color"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:textAlignment="textStart"
        android:layout_marginTop="30dp"
        android:id="@+id/text"
        android:text="برای ارتباط با ما و ارسال پیشنهادات و انتقادات به آدرس زیر ایمیل بزنید"/>

    <ir.Peaky.checkit.utils.RegularTextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sup.checkit@gmail.com"
        android:textSize="16sp"
        android:textColor="@color/main"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text"
        android:layout_marginTop="20dp"/>



</RelativeLayout>